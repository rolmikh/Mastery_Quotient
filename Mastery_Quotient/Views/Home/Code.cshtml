@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../css/mainStyle.css">
    <link rel="stylesheet" href="../css/crudStyle.css">
    <link href="https://fonts.googleapis.com/css?family=Mulish:200,300,regular,500,600,700,800,900,200italic,300italic,italic,500italic,600italic,700italic,800italic,900italic"
          rel="stylesheet" />

    <title>Подтверждение электронной почты</title>
</head>

<body>
    <main>

        <div class="form_new">
            @if (TempData["Code"] != null)
            {
                <div class="alert alert-success" role="alert">
                    @TempData["Code"]
                </div>
            }
            <br/>
            <br />
            <br />

            <form asp-antiforgery="true" asp-controller="Home" asp-action="Registration">
                <div>
                    <input class="CrudInput" name="key" id="key" type="number" placeholder="Код подтверждения" />

                </div>
                <input class="newInput" type="submit" value="Подтвердить" />
            </form>


        </div>
    </main>

