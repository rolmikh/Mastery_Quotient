@model Mastery_Quotient.Models.EmployeeModelDetails
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../css/mainStyle.css">
    <link href="https://fonts.googleapis.com/css?family=Mulish:200,300,regular,500,600,700,800,900,200italic,300italic,italic,500italic,600italic,700italic,800italic,900italic"
          rel="stylesheet" />
    <title>Подробная информация о преподавателе</title>
</head>

<body>
    <main>

        <h1>ФИО сотрудника: @Model.employee.SurnameEmployee @Model.employee.NameEmployee @Model.employee.MiddleNameEmployee</h1>
        <h2>Электронная почта сотрудника: @Model.employee.EmailEmployee</h2>
        <h2>Роль сотрудника: @Model.role.NameRole</h2>
        <h3>Учебные группы</h3>
        @foreach(var studyGroups in Model.employeeStudyGroups)
        {
            var nameGroup = Model.studyGroups.Find(n => n.IdStudyGroup == studyGroups.StudyGroupId).NameStudyGroup;

            
            <div>@nameGroup</div>
        }
       

    </main>



</body>

</html>