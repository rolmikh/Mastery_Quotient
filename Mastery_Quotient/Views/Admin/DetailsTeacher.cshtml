@model Mastery_Quotient.Models.EmployeeModelDetails
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../css/mainStyle.css">
    <link rel="stylesheet" href="../css/footerStyle.css">

    <link href="https://fonts.googleapis.com/css?family=Mulish:200,300,regular,500,600,700,800,900,200italic,300italic,italic,500italic,600italic,700italic,800italic,900italic"
          rel="stylesheet" />
    <title>Подробная информация о преподавателе</title>
</head>

<body>
    <main>

        <h1>ФИО сотрудника: @Model.employee.SurnameEmployee @Model.employee.NameEmployee @Model.employee.MiddleNameEmployee</h1>
        <h2>Электронная почта сотрудника: @Model.employee.EmailEmployee</h2>
        <h2>Роль сотрудника: @Model.role.NameRole</h2>
        <h3>Учебные группы</h3>
        @foreach(var studyGroups in Model.employeeStudyGroups)
        {
            var nameGroup = Model.studyGroups.Find(n => n.IdStudyGroup == studyGroups.StudyGroupId).NameStudyGroup;

            
            <div>@nameGroup</div>
        }
       

    </main>


    <footer>
        <a asp-action="MaterialsAdmin" asp-controller="Admin" class="divLogo">
            <h1>MastQuo</h1>
        </a>
        <div class="divForm">
            <div class="divMap">
                <h3>Карта сайта</h3>
                <div class="divFormMap">
                    <a asp-action="MaterialsAdmin" asp-controller="Admin">
                        Материалы
                    </a>
                    <a asp-action="AdminTestView" asp-controller="Admin">
                        Тесты
                    </a>
                    <a asp-action="AdminPanel" asp-controller="AdminCRUD">
                        Панель администратора
                    </a>

                </div>

            </div>
            <div class="divMap" style="float: right">
                <h3>Документация</h3>
                <div class="divFormDoc">

                    <a asp-action="PrivacyPolicy" asp-controller="Home">
                        Политика конфиденциальности
                    </a>
                </div>

            </div>
        </div>
        <div class="divMastQuo">
            © MastQuo, 2024
        </div>

    </footer>
</body>

</html>