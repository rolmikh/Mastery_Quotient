@model Mastery_Quotient.Models.EmployeeModelView
@using Microsoft.AspNetCore.Mvc.ModelBinding

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../css/mainStyle.css">
    <link rel="stylesheet" href="../css/crudStyle.css">
    <link rel="stylesheet" href="../css/footerStyle.css">

    <link href="https://fonts.googleapis.com/css?family=Mulish:200,300,regular,500,600,700,800,900,200italic,300italic,italic,500italic,600italic,700italic,800italic,900italic"
          rel="stylesheet" />
    <title>Добавление преподавателя</title>
</head>

<body>
    <main>
        <div class="form_new" >
            <form asp-antiforgery="true" asp-action="TeacherNew" asp-controller="Admin">
                <label  hidden>Введите ФИО</label>
                <br />
                <input class="CrudInput" type="text" required name="nameUser" placeholder="ФИО" />
                <br />
                <label hidden>Введите электронную почту</label>
                <br />
                <input class="CrudInput" type="email" required name="emailUser"
                       placeholder="Электронная почта" />

                <br />
                <label  hidden>Введите пароль</label>
                <br />
                <input class="CrudInput" type="password" required name="passwordUser" placeholder="Пароль" />
                <br />
                <label  hidden>Выберите роль</label>
                <br />
                <select class="CrudSelect" required id="roleUser" name="roleUser" placeholder="Роль">
                    <option selected disabled>Роль</option>
                    @foreach (var role in Model.Roles)
                    {
                        <option value="@role.IdRole">@role.NameRole</option>
                    }
                </select>
                <br />
                <br />

                <input class="newInput" type="submit" value="Добавить сотрудника" />

                

            </form>

            <br />

            @if (TempData["ErrorValidation"] != null)
            {
                <div class="alert alert-danger">

                    @foreach (var errorMessage in (string[])TempData["ErrorValidation"])
                    {
                        <p>@errorMessage</p>
                    }
                </div>
            }
            <br />
            
        </div>
        

    </main>

    <footer>
        <a asp-action="MaterialsAdmin" asp-controller="Admin" class="divLogo">
            <h1>MastQuo</h1>
        </a>
        <div class="divForm">
            <div class="divMap">
                <h3>Карта сайта</h3>
                <div class="divFormMap">
                    <a asp-action="MaterialsAdmin" asp-controller="Admin">
                        Материалы
                    </a>
                    <a asp-action="AdminTestView" asp-controller="Admin">
                        Тесты
                    </a>
                    <a asp-action="AdminPanel" asp-controller="AdminCRUD">
                        Панель администратора
                    </a>

                </div>

            </div>
            <div class="divMap" style="float: right">
                <h3>Документация</h3>
                <div class="divFormDoc">

                    <a asp-action="PrivacyPolicy" asp-controller="Home">
                        Политика конфиденциальности
                    </a>
                </div>

            </div>
        </div>
        <div class="divMastQuo">
            © MastQuo, 2024
        </div>

    </footer>

</body>

</html>